        "axios": "^1.4.0",
        "clsx": "^2.0.0",
        "date-fns": "^2.30.0",
        "ethers": "^6.7.1",
        "framer-motion": "^10.13.0",
        "lucide-react": "^0.263.1",
        "markdown-to-jsx": "^7.3.2",
        "next": "^15.3.3",
        "next-themes": "^0.2.1",
        "react": "^19.1.0",
        "react-dom": "^19.1.0",
        "react-intersection-observer": "^9.5.2",
        "rss": "^1.2.2",
