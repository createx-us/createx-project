{
    "name": "@createx/facilitator-guide",
    "version": "1.0.0",
    "description": "CreateX Protocol Facilitator Guide - Comprehensive guide for workshop facilitators and community leaders",
    "private": true,
    "scripts": {
        "build": "next build",
        "build:skip-ts": "SKIP_TYPECHECK=true node -e 'process.env.NEXT_DISABLE_TYPESCRIPT_CHECKS=true;process.env.NEXT_DISABLE_ESLINT_CHECKS=true;' next build",
        "build:cloudflare": "npx @cloudflare/next-on-pages",
        "deploy": "npm run build:cloudflare && wrangler pages deploy .vercel/output/static --project-name createx-facilitator-guide",
        "dev": "next dev --port 3002",
        "start": "next start --port 3002",
        "test": "jest",
        "test:watch": "jest --watch",
        "lint": "next lint",
        "format": "prettier --write .",
        "type-check": "tsc --noEmit",
        "export": "next export",
        "clean": "rm -rf .next out",
        "build:static": "node scripts/build-simple.js build",
        "serve:static": "node scripts/build-simple.js serve",
        "validate:content": "node scripts/build-simple.js validate",
        "stats": "node scripts/build-simple.js stats",
        "export:pdf": "tsx scripts/build.ts build --output dist/pdf && echo 'PDF export ready'",
        "export:html": "tsx scripts/build.ts build --output dist/html && echo 'HTML export ready'"
    },
    "dependencies": {
        "@radix-ui/react-accordion": "^1.1.2",
        "@radix-ui/react-navigation-menu": "^1.1.3",
        "chalk": "^5.4.1",
        "clsx": "^2.0.0",
        "commander": "^11.1.0",
        "date-fns": "^2.30.0",
        "express": "^4.21.2",
        "framer-motion": "^10.13.0",
        "gray-matter": "^4.0.3",
        "lucide-react": "^0.263.1",
        "markdown-to-jsx": "^7.3.2",
        "next": "14.2.5",
        "next-themes": "^0.2.1",
        "react": "^18.3.1",
        "react-dom": "^18.3.1",
        "react-intersection-observer": "^9.5.2",
        "remark": "^15.0.1",
        "remark-gfm": "^4.0.1",
        "remark-html": "^16.0.1",
        "tailwind-merge": "^1.14.0"
    },
    "devDependencies": {
        "@cloudflare/next-on-pages": "^1.13.12",
        "@tailwindcss/aspect-ratio": "^0.4.2",
        "@tailwindcss/forms": "^0.5.4",
        "@tailwindcss/typography": "^0.5.9",
        "@testing-library/jest-dom": "^5.17.0",
        "@testing-library/react": "^13.4.0",
        "@types/express": "^4.17.23",
        "@types/node": "^20.4.5",
        "@types/react": "^18.2.15",
        "@types/react-dom": "^18.2.7",
        "@typescript-eslint/eslint-plugin": "^6.21.0",
        "@typescript-eslint/parser": "^6.21.0",
        "autoprefixer": "^10.4.14",
        "eslint": "^8.45.0",
        "eslint-config-next": "^13.4.12",
        "eslint-config-prettier": "^10.1.5",
        "jest": "^29.6.2",
        "postcss": "^8.4.27",
        "tailwindcss": "^3.3.0",
        "tsx": "^4.20.3",
        "typescript": "^5.1.6"
    },
    "keywords": [
        "nextjs",
        "facilitator",
        "guide",
        "education",
        "workshop",
        "blockchain",
        "createx"
    ]
}
